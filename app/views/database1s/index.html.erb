<h1>Contacts</h1>


<table class="table table-striped table-hover">
<thead>
<tr>
   <th>First name:</th>
   <th>Last name:</th>
   <th>Email:</th>
    <th>Phone:</th>
   <th>Twitter:</th>
   </tr>
</thead>

<div id="database1">
<tbody>
  <% @database1s.each do |database1| %>


   <tr>
   <div id="<%= dom_id database1 %>">
        <td><%= database1.first_name %></td>
        <td><%= database1.last_name %></td>
        <td><%= database1.email %></td>
        <td><%= database1.phone %></td>
        <td><%= database1.twitter %></td>
        <td><%= link_to "Show", database1 , class:"btn btn-link" %></td>
        <td><%= link_to "Edit", edit_database1_path(database1), class:"btn btn-link"  %></td>
        <td><%= button_to "Destroy", database1, method: :delete, class:"btn btn-link" %></td>
       </tr>



  
  <% end %>

  </tbody>
  </table>
    
         <%=link_to 'Add Contact', new_database1_path, class:"btn btn-secondary" %>
</div>
